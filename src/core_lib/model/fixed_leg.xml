<?xml version="2.0"?>
<robot name="fixed_leg">

  <link name="world"/>

  <joint name="world_to_base" type="fixed">
    <parent link="world"/>  
    <child link="base_link"/>  
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

<!-- Hip ab/ad link(sphere) only visual -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.02"/> </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>
    
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

<!-- HAA joint (hip_aa_joint) -->
  <joint name="hip_aa_joint" type="revolute">
    <parent link="base_link"/>  
    <child link="hip_link"/>  
    <origin xyz="0 0 0" rpy="0 0 0"/> 
    <axis xyz="1 0 0"/>  
    <limit lower="-2.094" upper="2.094" effort="17" velocity="40"/>
  </joint>

<!-- Hip link -->
  <link name="hip_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>    
      <geometry>  
            <cylinder length="0.04" radius="0.048"/> </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>    
      <geometry>  
            <cylinder length="0.04" radius="0.048"/> </geometry>
    </collision>

    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>

  </link>

<!-- HFE joint (hip_joint) -->
  <joint name="hip_joint" type="revolute">
    <parent link="hip_link"/>  
    <child link="thigh_link"/>  
    <origin xyz="0 0.04 0" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>  
    <limit lower="-4.712" upper="4.712" effort="17" velocity="40"/>
  </joint>

<!-- Thigh link -->
  <link name="thigh_link">
    <visual>
      <origin xyz="0 0 -0.105" rpy="0 0 0"/> 
      <geometry>
        <box size="0.04 0.04 0.21"/> </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 -0.105" rpy="0 0 0"/> 
      <geometry>
        <box size="0.04 0.04 0.21"/> </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

<!-- KFE joint (knee_joint) -->
  <joint name="knee_joint" type="revolute">
    <parent link="thigh_link"/>  
    <child link="calf_link"/>  
    <origin xyz="0 0 -0.21" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>  
    <limit lower="-2.705" upper="2.705" effort="17" velocity="40"/>
  </joint>

<!-- calf link -->
  <link name="calf_link">
    <visual>
      <origin xyz="0 0 -0.095" rpy="0 0 0"/> 
      <geometry>
        <box size="0.03 0.03 0.19"/> </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 -0.095" rpy="0 0 0"/> 
      <geometry>
        <box size="0.03 0.03 0.19"/> </geometry>
    </collision>

    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="foot" type="fixed">
    <parent link="calf_link"/>  
    <child link="foot_link"/>  
    <origin xyz="0 0 -0.19" rpy="0 0 0"/> 
  </joint> 

<!-- foot link -->
  <link name="foot_link">
    <visual>
      <geometry>
        <sphere radius="0.02"/> </geometry>
        <material name="black">
          <color rgba="0 0 0 1"/>
        </material>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.02"/> </geometry> 
    </collision>
    
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial> 
  </link>
</robot>