<?xml version="1.0"?>
<robot name="single_leg">

<!-- Fixed base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/> </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

<!-- HAA joint (hip_aa_joint) -->
  <joint name="hip_aa_joint" type="revolute">
    <parent link="base_link"/>  <child link="hip_aa_link"/>  <origin xyz="0 0 -0.05" rpy="0 0 0"/> <axis xyz="1 0 0"/>  <limit lower="-1.57" upper="1.57" effort="100" velocity="10"/>
  </joint>

<!-- Hip link(sphere) -->
  <link name="hip_aa_link">
    <visual>
      <origin xyz="0 0 -0.05" rpy="0 0 0"/> 
      <geometry>
        <sphere radius="0.03"/> </geometry>
      <material name="green">
        <color rgba="0 0.8 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

<!-- HFE joint (hip_joint) -->
  <joint name="hip_joint" type="revolute">
    <parent link="hip_aa_link"/>  <child link="thigh_link"/>  <origin xyz="0 0 -0.05" rpy="0 0 0"/> <axis xyz="0 1 0"/>  <limit lower="-1.57" upper="1.57" effort="100" velocity="10"/>
  </joint>

<!-- Thigh link -->
  <link name="thigh_link">
    <visual>
      <origin xyz="0 0 -0.2" rpy="0 0 0"/> 
      <geometry>
        <cylinder length="0.4" radius="0.02"/> </geometry>
      <material name="red">
        <color rgba="0.8 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

<!-- KFE joint (knee_joint) -->
  <joint name="knee_joint" type="revolute">
    <parent link="thigh_link"/>  <child link="calf_link"/>  <origin xyz="0 0 -0.4" rpy="0 0 0"/> <axis xyz="0 1 0"/>  <limit lower="-1.57" upper="1.57" effort="100" velocity="10"/>
  </joint>

<!-- calf link -->
  <link name="calf_link">
    <visual>
      <origin xyz="0 0 -0.2" rpy="0 0 0"/> 
      <geometry>
        <cylinder length="0.4" radius="0.02"/> </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>
</robot>